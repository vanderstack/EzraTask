# src/ui/Dockerfile.dev (NEW)
FROM node:20-alpine
WORKDIR /app/src/ui
RUN apk add --no-cache curl
COPY src/ui/package*.json ./
RUN npm install
EXPOSE 5173
CMD ["/bin/sh", "-c", "echo '--- RADICAL OBSERVABILITY ---'; echo 'Listing /app/src/ui:'; ls -la; echo 'Checking for node_modules:'; if [ -d 'node_modules' ]; then echo 'node_modules found.'; else echo 'node_modules NOT FOUND.'; fi; echo 'Checking for vite executable:'; if [ -f 'node_modules/.bin/vite' ]; then echo 'vite executable found.'; else echo 'vite executable NOT FOUND.'; fi; echo 'Current PATH: $PATH'; echo '--- END OBSERVABILITY ---'; npm run dev"]
