# Use a Debian-based Node.js image for binary compatibility with Cypress
FROM public.ecr.aws/docker/library/node:20-bookworm

# Install the full suite of Cypress dependencies for Debian/Ubuntu
# See: https://on.cypress.io/required-dependencies
RUN apt-get update && apt-get install -y \
    libgtk2.0-0 \
    libgtk-3-0 \
    libgbm-dev \
    libnotify-dev \
    libgconf-2-4 \
    libnss3 \
    libxss1 \
    libasound2 \
    libxtst6 \
    xauth \
    xvfb

# Set working directory
WORKDIR /app/src/ui

# Copy package files and install dependencies
COPY src/ui/package.json src/ui/package-lock.json* ./
RUN npm ci

# Copy the rest of the UI source code
COPY src/ui .

# Set the Cypress base URL from an environment variable
ENV CYPRESS_BASE_URL=http://ui:5173

# The command to run the tests, overridden in docker-compose.yml
CMD ["npm", "run", "_test:e2e:local"]